<?xml version="1.0" encoding="utf-8"?><extension type="module" version="1.7" client="site" method="upgrade">    <name>Contact me</name>    <author>Dmitry Lapshukov</author>    <creationDate>August 2011</creationDate>    <copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>    <authorEmail>hi@rhythmcode.com</authorEmail>    <authorUrl>http://rhythmcode.com/</authorUrl>    <version>1.0.0</version>    <description>MOD_CONTACTME_DESCR</description>    <files>        <filename module="mod_contactme">mod_contactme.php</filename>        <filename>index.html</filename>        <folder>include</folder>        <folder>tmpl</folder>    </files>    <languages folder="langage">	<language tag="en-GB">en-GB.mod_contactme.ini</language>    </languages>    <languages folder="administrator/langage">	<language tag="en-GB">en-GB.mod_contactme.ini</language>    </languages>    <config>        <fields name="params">            <fieldset name="basic">                <field                    name="sendmailto"                    type="text"                    label="MOD_CONTACTME_MAILSENDTO"                    description="MOD_CONTACTME_MAILSENDTO_DESC" />                <field name="backgroundimage" type="media"                    label="MOD_CONTACTME_BACKGROUNDIMAGE_LABEL"                    description="MOD_CONTACTME_BACKGROUNDIMAGE_LABEL_DESC" />            </fieldset>            <fieldset name="advanced">                <field                    name="layout"                    type="modulelayout"                    label="JFIELD_ALT_LAYOUT_LABEL"                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />                <field                    name="moduleclass_sfx"                    type="text"                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                <field                    name="cache"                    type="list"                    default="1"                    label="COM_MODULES_FIELD_CACHING_LABEL"                    description="COM_MODULES_FIELD_CACHING_DESC">                    <option			value="1">JGLOBAL_USE_GLOBAL                    </option>                    <option			value="0">COM_MODULES_FIELD_VALUE_NOCACHING                    </option>                </field>                <field                    name="cache_time"                    type="text"                    default="900"                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />                <field                    name="cachemode"                    type="hidden"                    default="static">                    <option			value="static">                    </option>                </field>            </fieldset>        </fields>    </config></extension>